#include <stdio.h>

int main() {
    float salary, pf, netSalary;
    
    printf("=== Net Salary Calculator ===\n\n");
    
    printf("Enter Salary: ");
    scanf("%f", &salary);
    
    
    if (salary < 30000) {
        pf = salary * 0.12;  // 12% PF
        printf("\nSalary is less than 30000\n");
        printf("PF Rate: 12%%\n");
    } else {
        pf = salary * 0.10;  
        printf("\nSalary is 30000 or more\n");
        printf("PF Rate: 10%%\n");
    }
    
    
    netSalary = salary - pf;
    
    
    printf("\n--- Salary Details ---\n");
    printf("Gross Salary: %.2f\n", salary);
    printf("PF Deduction: %.2f\n", pf);
    printf("Net Salary: %.2f\n", netSalary);
    
    return 0;
}
